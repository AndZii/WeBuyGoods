<div id="all">

  <div id="content">
    <div class="container">

      <div class="col-sm-12">

        <ul class="breadcrumb">

          <li><%= link_to "Home", root_url %>
          </li>
          <li><%= link_to 'All News', blog_index_path %>
          </li>
          <li>Blog post</li>
        </ul>
      </div>

      <div class="col-sm-9" id="blog-post">


        <div class="box">

          <h1> <%= @post.title_1 %></h1>
          <p class="author-date">By <a href="#">#admin</a> | <%= @post.created_at %> </p>
          <div id="post-content">
            <p>
                <%= @post.description %>
            <p>
              <%= image_tag @post.img_1, class: "img-responsive" %>
            </p>

            <h2><%= @post.title_2 %></h2>


            <p>
              <%=  @post.text.html_safe %>
            </p>



            <p>
              <%= image_tag @post.img_2, class: 'img-responsive' %>
            </p>



          </div>
          <!-- /#post-content -->

          <div id="comments" data-animate="fadeInUp">
            <% if @comments.empty? %>
            <h4>No comments</h4>
            <% else %>
            <h4> <%= @comments.count %> comments </h4>
            <% @comments.each do |comment| %>

            <div class="row comment">
              <div class="col-sm-3 col-md-2 text-center-xs">
                <p>
                  <img src="/img/blog-avatar2.jpg" class="img-responsive img-circle" alt="">
                </p>
              </div>
              <div class="col-sm-9 col-md-10">
                <h5><%= comment.name %></h5>
                <p class="posted"><i class="fa fa-clock-o"></i> <%= comment.created_at %></p>
                <p><%= comment.comment %></p>
                <p class="reply"><a href="#"><i class="fa fa-reply"></i> Reply</a>
                </p>
              </div>
            </div>
            <!-- /.comment -->

            <% end %>
            <% end %>
                    <!--add last to last comm class-->
            <!-- /.comment -->

          </div>
          <!-- /#comments -->

          <div id="comment-form" data-animate="fadeInUp">

            <h4>Leave comment</h4>

            <%= form_for @post_comment do |f|  %>
              <div class="row">

                <div class="col-sm-6">
                  <div class="form-group">
                    <label for="name">Name <span class="required">*</span>
                    </label>
                    <%= f.text_field :name , class: 'form-control'%>
                  </div>
                </div>

              </div>

              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group">
                    <label for="email">Email <span class="required">*</span>
                    </label>
                    <%= f.text_field :email, class: "form-control" %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-sm-12">
                  <div class="form-group">
                    <label for="comment">Comment <span class="required">*</span>
                    </label>
                    <%= f.text_area :comment, class: 'form-control' %>
                  </div>
                </div>
              </div>

                <%= f.hidden_field :post_id, value: @post.id.to_s %>

              <div class="row">
                <div class="col-sm-12 text-right">
                  <button class="btn btn-primary"><i class="fa fa-comment-o"></i> Post comment</button>
                </div>
              </div>


            <% end %>

          </div>
          <!-- /#comment-form -->

        </div>
        <!-- /.box -->
      </div>
      <!-- /#blog-post -->

      <div class="col-md-3">
        <!-- *** BLOG MENU ***
_________________________________________________________ -->
        <div class="panel panel-default sidebar-menu">

          <div class="panel-heading">
            <h3 class="panel-title">Blog</h3>
          </div>

          <div class="panel-body">

            <ul class="nav nav-pills nav-stacked">
              <li>
                <a href="blog.html">About us</a>
              </li>
              <li class="active">
                <a href="blog.html">Fashion</a>
              </li>
              <li>
                <a href="blog.html">News and gossip</a>
              </li>
              <li>
                <a href="blog.html">Design</a>
              </li>
            </ul>
          </div>

        </div>
        <!-- /.col-md-3 -->

        <!-- *** BLOG MENU END *** -->

        <div class="banner">
          <a href="#">
            <img src="/img/banner.jpg" alt="sales 2014" class="img-responsive">
          </a>
        </div>
      </div>


    </div>
    <!-- /.container -->
  </div>
  <!-- /#content -->
 </div>
<!--all-->