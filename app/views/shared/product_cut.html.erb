<% @products.each do |product| %>

    <div class="item">
      <div class="product">

        <div class="flip-container">
          <div class="flipper">


            <div class="front">
              <%= link_to(product) do %>
                  <%= image_tag product.first_img , class: 'img-responsive' %>
              <% end  %>
            </div>
            <div class="back">
              <%= link_to(product) do %>
                  <%= image_tag product.second_img , class: 'img-responsive' %>
              <% end  %>
            </div>
          </div>
        </div>

        <%= link_to(product, class: 'invisible') do %>
            <%= image_tag product.first_img , class: 'img-responsive' %>
        <% end  %>
        <div class="text">
          <h3><%= link_to product.text, product %></h3>
          <p class="price"> <strong> UP TO <%= product.price %> </strong> </p>
        </div>
        <!-- /.text -->
      </div>
      <!-- /.product -->
    </div>
<% end  %>